@model List<ArifOmer.BlogApp.UI.Models.AssignCategoryModel>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var requestCulture = Context.Features.Get<IRequestCultureFeature>().RequestCulture.UICulture.Name;
}

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

<form asp-action="AssignCategory" method="POST">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].CategoryName">
            <input type="hidden" asp-for="@Model[i].CategoryId">

            <input asp-for="@Model[i].Exists" class="form-check-input" type="checkbox">
            <label asp-for="@Model[i].Exists" class="form-check-label">@Model[i].CategoryName</label>
        </div>
    }
    <button type="submit" class="btn btn-primary btn-sm">@Localizer["Kaydet"]</button>
</form>