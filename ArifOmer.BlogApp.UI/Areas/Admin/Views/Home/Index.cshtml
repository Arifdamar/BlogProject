
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card bg-light my-3 mx-auto d-block text-center">
                <div class="card-header bg-info font-weight-bold">Yazılan Toplam Bloglar</div>
                <div class="card-body">
                    @if (ViewBag.TotalBlogCount > 0)
                    {
                        <h4 class="card-title">@ViewBag.TotalBlogCount</h4>
                        <a href="@Url.Action("Index", "Blog", new { Area = "Admin" })" class="btn btn-info btn-block">Görüntüle</a>
                    }
                    else
                    {
                        <h4 class="card-title">Henüz Hiç Blog Yazılmamış</h4>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
