@using ArifOmer.BlogApp.DTO.DTOs.CommentDtos
@model BlogListDto


@{
    var commentListDtos = (List<CommentListDto>)ViewBag.Comments;

    void GetComments(IReadOnlyCollection<CommentListDto> comments)
    {

        if (comments.Count > 0)
        {
            foreach (var comment in comments)
            {
                <div class="media my-3">
                    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                    <div class="media-body">
                        <h5 class="mt-0">@comment.AuthorName</h5>
                        @comment.Description
                        <button type="button" class="btn btn-sm btn-primary float-right" onclick="showCommentForm(@comment.Id,@Model.Id)">Cevapla</button>
                        <div id="commentBox@(comment.Id)">

                        </div>

                        @{
                            GetComments(comment.SubComments);
                        }

                    </div>
                </div>
            }
        }
    }
}

<div class="col-lg-8 col-md-10 mx-auto">
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/images/@Model.ImagePath')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-12 mx-auto">
                    <div class="post-heading">
                        <h1>@Model.Title</h1>
                        <h2 class="subheading">@Model.ShortDescription</h2>
                        <span class="meta">@Model.PostedTime</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-12 mx-auto text-black-50">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
    </article>

    <!-- Comments Form -->
    <div class="card my-4">
        <h5 class="card-header">Yorum Yaz:</h5>
        <div class="card-body">
            <form method="POST" asp-action="AddComment" asp-controller="Blog" >
                <input type="hidden" name="BlogId" value="@Model.Id">

                <div class="form-group">
                    <label>Gözükmesini İstediğiniz Ad:</label>
                    <input type="text" class="form-control" name="AuthorName" value="@User?.Identity?.Name" required>
                </div>
                <div class="form-group">
                    <label>Email Adresiniz: </label>
                    <input type="email" class="form-control" name="AuthorEmail" required>
                </div>
                <div class="form-group">
                    <label>Yorumunuz :</label>
                    <textarea class="form-control" rows="3" name="Description" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    
    <!-- Comment with nested comments -->
    @{
        GetComments(commentListDtos);
    }
</div>




@section JavaScript{

    <script>
        function showCommentForm(id, blogId) {
            var html = `<div class="card my-4" > <h5 class="card-header">Yorum Yaz:</h5> <div class="card-body"> <form method="POST" action="/Blog/AddComment"> <input type="hidden" name="BlogId" value="${blogId}"> <input type="hidden" name="ParentCommentId" value="${id}"> <div class="form-group"> <label >Gözükmesini İstediğiniz Ad:</label> <input type="text" class="form-control" name="AuthorName" value="@User?.Identity?.Name" required> </div><div class="form-group"> <label >Email Adresiniz: </label> <input type="email" class="form-control" name="AuthorEmail" required> </div><div class="form-group"> <label >Yorumunuz :</label> <textarea class="form-control" rows="3" name="Description" required></textarea> </div><button type="button" class="btn btn-warning" onclick="hideCommentForm(${id})">Vazgeç</button> <button type="submit" class="btn btn-primary">Gönder</button> </form> </div></div>`;
            $("#commentBox" + id).html(html);
        }

        function hideCommentForm(id) {
            $("#commentBox" + id).html("");
        }
    </script>
}