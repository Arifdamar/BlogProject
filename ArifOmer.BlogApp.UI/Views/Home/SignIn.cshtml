@model AppUserSignInDto

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-50 container mt-5">
    <form asp-action="SignIn" method="post" class="mt-3 mx-auto p-3 shadow">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>@_localizer["Kullanıcı Adı"]</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>@_localizer["Şifre"]</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
            <label class="form-check-label">@_localizer["Beni Hatırla"]</label>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success btn-sm" value="@_localizer["Giriş Yap"]" />
            <a asp-action="Register" class="btn btn-info btn-sm">@_localizer["Kayıt Ol"]</a>
        </div>
    </form>
</div>
