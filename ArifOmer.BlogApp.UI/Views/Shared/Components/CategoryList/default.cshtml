@model List<ArifOmer.BlogApp.DTO.DTOs.CategoryBlogDtos.CategoryWithBlogsCountDto>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

<div class="card rounded">
    <h5 class="card-header text-center">@_localizer["KATEGORİLER"]</h5>
    <div class="list-group">
        @foreach (var category in Model)
        {
            <div class="list-group ">
                <a asp-action="Index" asp-route-categoryId="@category.CategoryId" class="list-group-item rainbow list-group-item-action d-flex justify-content-between align-items-center @(ViewBag.ActiveCategory?.ToString()==category.CategoryId.ToString()?"active":"")">
                    @category.CategoryName
                    <span class="badge badge-dark badge-pill">@category.BlogsCount</span>
                </a>
            </div>
        }
    </div>
</div>