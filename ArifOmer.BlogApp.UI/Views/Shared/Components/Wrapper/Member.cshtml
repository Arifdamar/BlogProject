@model AppUserListDto
@{
    string activePage = TempData["Active"]?.ToString();
}

<div class="border-right" id="sidebar-wrapper">
    <div class="sidebar-heading text-center">
        <img src="~/images/@Model.Picture" alt="@Model.Name" class="img-thumbnail" style="height: 12rem !important; max-width: 12rem !important; max-height: 12rem !important;" />
    </div>
    <div class="list-group list-group-flush">
        <a asp-controller="Home" asp-action="Index" asp-area="" class="list-group-item list-group-item-action"><i class="fab fa-blogger-b mr-2"></i>Blog'a Dön</a>
        <a asp-area="Member" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action @(activePage == "homePage" ? "active" : "")"><i class="fas fa-home mr-2"></i>Ana Sayfa</a>
        <a asp-controller="Profile" asp-action="Index" asp-area="Member" class="list-group-item list-group-item-action @(activePage == "profile" ? "active" : "")"><i class="far fa-user-circle mr-2"></i>Profil</a>
        <a asp-area="" asp-controller="Home" asp-action="SignOut" class="list-group-item list-group-item-action"><i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap</a>
    </div>
</div>